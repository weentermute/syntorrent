<Controls:Window
        x:Class="SynTorrent.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Elysium.Controls;assembly=Elysium"
        Title="MessageWindow" Width="439" ResizeMode="NoResize" Topmost="True" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Height="215" SizeToContent="Height">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="130"/>
            <RowDefinition Height="52"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageText" HorizontalAlignment="Left" Margin="10,10,0,10" TextWrapping="Wrap" Width="413"/>
        <Grid Margin="188,11,10,10" Grid.Row="1">
            <Button x:Name="Button1" Content="" HorizontalAlignment="Left" Margin="0,1,0,0" Width="75" Click="Button1_Click"/>
            <Button x:Name="Button2" Content="" HorizontalAlignment="Left" Margin="80,1,0,0" Width="75" Click="Button2_Click"/>
            <Button x:Name="Button3" Content="" HorizontalAlignment="Left" Margin="160,0,0,0" Width="75" IsDefault="True" Click="Button3_Click"/>
        </Grid>

    </Grid>
</Controls:Window>
